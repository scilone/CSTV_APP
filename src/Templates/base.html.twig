    <body>
        <style>
            #header {
                background: rgb(24, 26, 27);
                width: 100%;
                z-index: 10;
                position: fixed;
                padding: 1em;
                font-weight: bold;
            }

            #header a.btn {
                background-color: rgb(49, 53, 55);
            }
            .btn {
                border-color: transparent;
            }
            a {
                color: rgb(195, 190, 182);
            }
            ::-webkit-scrollbar {
                background-color: #202324;
                color: #aba499;
            }
            ::-webkit-scrollbar-corner {
                background-color: #181a1b;
            }
            ::-webkit-scrollbar-thumb {
                background-color: #454a4d;
            }
            ::selection {
                background-color: #004daa !important;
                color: #e8e6e3 !important;
            }

            {% if isTv %}
            a.btn-danger, a.btn-default, a.btn-primary, a.btn-warning, a.btn-success, a.btn-info {
                background-color: rgb(49, 53, 55);
            }

            .form-control:focus {
                border-width: 3px;
                border-color: rgba(232,177,44, .8);
            }
            {% endif %}

            body {
                margin: 0;
            }

            #flex {
                padding-top: 5em;
                padding-left: 2em;
            }

            #flex .over {
                line-height: 1.5em;
                letter-spacing: -0.5px;
                font-weight: bold;
                font-family: roboto;
                position: absolute;
                bottom: 0;
                left: 0;
                right: 0;
                padding: 4px 6px;
                font-size: 13px;
                color: #fff;
                background: rgba(0,0,0,0.7);
                text-align: center;
            }

            .flex-images .item img {
                width: 100px;
                height: 160px;
            }

            #flex a:focus > .item {
                border: 3px solid #e8b12c;
                width: 96px;
                height: 156px;
            }

            #flex a:focus > .item > .over {
                color: #e8b12c !important;
            }

            /* STARS */
            .star.star-1:after {
                width: 3px;
            }
            .star.star-2:after {
                width: 4px;
            }
            .star.star-3:after {
                width: 5px;
            }
            .star.star-4:after {
                width: 6px;
            }
            .star.star-5:after {
                width: 7px;
            }
            .star.star-6:after {
                width: 8px;
            }
            .star.star-7:after {
                width: 9px;
            }
            .star.star-8:after {
                width: 10px;
            }
            .star.star-9:after {
                width: 11px;
            }

            .sidenav {
                height: 100%;
                position: fixed;
                z-index: 1;
                top: 0;
                left: 0;
                background-color: #111;
                overflow-x: hidden;
                padding: 5em 0;
            }

            .sidenav a {
                font-family: roboto;
                padding: 6px 8px 6px 16px;
                text-decoration: none;
                color: #818181;
                display: block;
                letter-spacing: -0.5px;
                line-height: 1em;
            }

            .sidenav a:hover {
                color: #f1f1f1;
            }

            .sidenav ul {
                list-style-type:none;
                padding: 0;
            }

            .sidenav a:focus{
                font-weight: bold;
                color: #e8b12c !important;
            }

            img:not([src]) {
                visibility: hidden;
            }

            /* Fixes Firefox anomaly during image load */
            @-moz-document url-prefix() {
                img:-moz-loading {
                    visibility: hidden;
                }
            }
        </style>

